{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "js_compiled",
    "allowJs": true,
    "baseUrl": "src/",
    "target": "ES5"
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**/*.test.js",
    "src/**/*.test.ts"
  ]
}
