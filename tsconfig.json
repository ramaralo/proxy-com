{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "src/",
    "target": "ES5",
    "declaration": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["src/**/*.test.js", "src/**/*.test.ts"]
}
